{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "allowJs": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "strict": true,
  "noImplicitAny": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "sourceMap": true,
  "strictNullChecks": true,
  "include": [
    "src", "./declaration.d.ts"
  ]
}